\def\codenone{%
    \colorlet{codekeyword}{black}%
    \colorlet{codevar}{black!75}%
    \colorlet{codestring}{black!75}%
    \colorlet{codedirective}{black}%
    \colorlet{codecomment}{black!50}%
    \colorlet{codebg}{white}%
    \colorlet{codefg}{black}%
    \colorlet{codelines}{black!50}%
    \colorlet{codetitle}{red}%
    \colorlet{codetext}{black}%
    \setbeamercolor{editor}{fg=codefg,bg=codebg}%
    \lstset{%
        commentstyle=\color{codecomment}\emph,%
        keywordstyle=\color{codekeyword}\bfseries,%
        directivestyle=\color{codedirective},%
        numberstyle=\scriptsize\color{codelines},%
        stringstyle=\color{codestring},%
        identifierstyle=\color{codevar},%
    }%
}

