% Solarized Light
\def\codelight{%
    \colorlet{codekeyword}{green}
    \colorlet{codevar}{blue}
    \colorlet{codestring}{cyan}
    \colorlet{codedirective}{orange}
    \colorlet{codecomment}{base1}
    \colorlet{codebg}{base3}
    \colorlet{codefg}{base01}
    \colorlet{codelines}{base1}
    \colorlet{codetitle}{base00}
    \colorlet{codetext}{base03}
    \lstset{
        commentstyle=\color{codecomment},
        keywordstyle=\color{codekeyword},
        directivestyle=\color{codedirective},
        numberstyle=\scriptsize\color{codelines},
        stringstyle=\color{codestring},
        identifierstyle=\color{codevar},
    }
}

